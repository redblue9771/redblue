{
    "version": 2,
    "name": "redblue",
    "alias": "www.redblue.fun",
    "builds": [{
        "src": "build.sh",
        "use": "@now/static-build",
        "config": {
            "distDir": "public"
        }
    }],
    "routes": [{
            "src": "^/js/(.*)",
            "headers": {
                "cache-control": "public,max-age=31536000,immutable"
            }
        },
        {
            "src": "^/css/(.*)",
            "headers": {
                "cache-control": "public,max-age=31536000,immutable"
            }
        },
        {
            "src": "^/img/(.*)",
            "headers": {
                "cache-control": "max-age=31536000,immutable"
            }
        },
        {
            "src": "^/(.*).html",
            "headers": {
                "cache-control": "public,max-age=0,must-revalidate"
            }
        },
        {
            "src": "/(.*)",
            "status": 301,
            "headers": { "Location": "https://redblue.fun/$1" }
          }
    ]
}